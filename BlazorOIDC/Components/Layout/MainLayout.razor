@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <span>Welcome, <strong>@context.User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value</strong></span>
                    @{
                        var roles = context.User.FindAll(System.Security.Claims.ClaimTypes.Role).Select(c => c.Value).ToList();
                        var roleDisplay = roles.Count > 0 ? string.Join(", ", roles) : "Unknown";
                    }
                    <span>Role: <strong>@roleDisplay</strong></span>
                    <form method="post" action="/logout" style="display: inline;">
                        <button type="submit" class="btn btn-link">Logout</button>
                    </form>
                </Authorized>
                <NotAuthorized>
                    <form method="post" action="/login" style="display: inline;">
                        <button type="submit" class="btn btn-link">Login</button>
                    </form>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
